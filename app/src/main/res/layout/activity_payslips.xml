<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payslips">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titlePayslips"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Payslip List"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <SearchView
            android:id="@+id/searchbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:iconifiedByDefault="false"
            android:searchHintIcon="@null"
            android:queryHint="Search..."
            android:focusable="false"
            android:searchIcon="@drawable/baseline_search_24"
            android:closeIcon="@drawable/baseline_clear_24"
            android:background="@drawable/custom_outline"
            app:layout_constraintTop_toBottomOf="@id/titlePayslips"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/constraintLayout"
        android:layout_above="@id/bottomNavigationView"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:background="@drawable/navbar_background"
        app:menu="@menu/bottom_nav"
        app:itemIconSize="28dp"
        app:itemTextAppearanceActive="@style/Widget.Design.BottomNavigationView"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>